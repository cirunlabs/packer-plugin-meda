{
  "name": "ubuntu-base",
  "description": "Minimal Ubuntu image with Docker CE and Docker Compose",
  "version": "3.0.0",
  "base_image": "ubuntu:latest",
  "features": [
    "Docker CE with Docker Compose",
    "Docker Buildx plugin",
    "Minimal footprint",
    "Aggressive cleanup for smaller image size",
    "GHCR/OCI registry push support"
  ],
  "installed_tools": {
    "container_runtime": ["docker", "docker-compose", "docker-buildx"]
  },
  "vm_requirements": {
    "memory": "2G",
    "cpus": 4,
    "disk": "20G"
  },
  "registry": "ghcr.io",
  "recommended_usage": "make all",
  "build_time_estimate": "3-5 minutes"
}